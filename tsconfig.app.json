{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "types": [],
    "lib": [
      "es2018",
      "dom"
    ], // Adjust as needed based on your target
    "skipLibCheck": true
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ], // Include all TypeScript files
  "exclude": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules" // It's generally a good idea to exclude node_modules
  ]
}